}
.description {
  font: 400 1vw/1vw Roboto, arial, helvetica, sans-serif;
  color: #FFF;
  margin-left: 1%;
  letter-spacing: 2.5px;
  margin-bottom: 6%;
}
.simple {
  font: 700 3vw/2.4vw Roboto, arial, helvetica, sans-serif;
  color: #FFF;
  margin-left: 5%;
  letter-spacing: 3px;
  width: 15%;
}
.simple:hover {
  cursor: pointer;
}
.simple:hover::before {
  display: block;
  content: "";
  width: 1.4%;
  height: 2%;
  background: #D62B2E;
  position: absolute;
  right: 91%;
  transform: translate(0%, 34%) rotate(45deg);
}
